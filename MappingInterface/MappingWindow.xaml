<Window x:Class="MappingInterface.MappingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MappingInterface"
        xmlns:mappingInterface="clr-namespace:MappingFramework.MappingInterface"
        mc:Ignorable="d"
        Title="MainWindow" Height="820" Width="1020" ResizeMode="NoResize">
    <Grid Margin="0,0,0,-16">
        <Border BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Left" Height="725" Margin="10,10,0,0" VerticalAlignment="Top" Width="199">
            <TextBox Text="TextBox" TextWrapping="Wrap" AcceptsReturn="True"/>
        </Border>
        <Border BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Left" Height="725" Margin="791,10,0,0" VerticalAlignment="Top" Width="199">
            <TextBox Text="TextBox" TextWrapping="Wrap" AcceptsReturn="True"/>
        </Border>
        <Border BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Center" Height="725" VerticalAlignment="Top" Width="572" Margin="0,10,0,0">
            <StackPanel x:Name="MappingConfigurationPanel">
                <Border BorderThickness="1" BorderBrush="Black">
                    <StackPanel x:Name="ObjectConverterPanel">
                        <Label Foreground="Blue" FontWeight="Bold">ObjectConverter</Label>
                    </StackPanel>
                </Border>
                <Border BorderThickness="1" BorderBrush="Black">
                    <StackPanel x:Name="TargetInstantiatorPanel">
                        <Label Foreground="Blue" FontWeight="Bold">TargetInstantiator</Label>
                    </StackPanel>
                </Border>
                <Border BorderThickness="1" BorderBrush="Black">
                    <StackPanel x:Name="ResultObjectConverterPanel">
                        <Label Foreground="Blue" FontWeight="Bold">ResultObjectConverter</Label>
                    </StackPanel>
                </Border>
                <Border BorderThickness="1" BorderBrush="Black">
                    <StackPanel>
                        <Label Foreground="Blue" FontWeight="Bold">Mapping</Label>
                        <StackPanel x:Name="MappingPanel">
                            
                        </StackPanel>
                        <Button x:Name="AddMapping">Add mapping</Button>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
        <Button x:Name="ButtonTest" Content="Test" HorizontalAlignment="Left" Height="24" Margin="910,748,0,0" VerticalAlignment="Top" Width="80"/>
    </Grid>
</Window>