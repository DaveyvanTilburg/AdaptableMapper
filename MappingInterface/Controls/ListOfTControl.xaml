<UserControl x:Class="MappingFramework.MappingInterface.Controls.ListOfTControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MappingFramework.MappingInterface.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="96" d:DesignWidth="832">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.33*"/>
            <RowDefinition Height="0.33*"/>
            <RowDefinition Height="0.33*"/>
        </Grid.RowDefinitions>
        <Label x:Name="LabelComponent" Grid.Row="0" FontWeight="Bold" Foreground="Red"/>
        <StackPanel x:Name="StackPanelComponent" Grid.Row="1">

        </StackPanel>
        <Button x:Name="AddButton" Grid.Row="2">Add</Button>
    </Grid>
</UserControl>
