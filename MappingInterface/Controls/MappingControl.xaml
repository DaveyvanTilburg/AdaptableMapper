<UserControl x:Class="MappingFramework.MappingInterface.Controls.MappingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MappingFramework.MappingInterface.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="64" d:DesignWidth="832">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.9*"/>
            <ColumnDefinition Width="0.1*"/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="GetValueStackPanelComponent" Grid.Column="0" Grid.Row="0">

        </StackPanel>
        <StackPanel x:Name="SetValueStackPanelComponent" Grid.Column="0" Grid.Row="1">

        </StackPanel>
        <Button x:Name="RemoveButton" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2">Remove</Button>
    </Grid>
</UserControl>
