<UserControl x:Class="MappingFramework.MappingInterface.Controls.ListOfTEntryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MappingFramework.MappingInterface.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="606">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.9*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        
        <Border BorderThickness="1" BorderBrush="Black" Grid.ColumnSpan="2" />

        <Expander IsExpanded="True" Grid.Column="0">
            <Expander.Header>
                <Label x:Name="LabelComponent" FontWeight="Bold" Foreground="Blue" />
            </Expander.Header>
            <Expander.Content>
                <StackPanel x:Name="StackPanelComponent">

                </StackPanel>
            </Expander.Content>
        </Expander>
        
        <Button x:Name="RemoveButton" Grid.Column="1">X</Button>
    </Grid>
</UserControl>
