<UserControl x:Class="MappingFramework.MappingInterface.Fields.CheckBoxField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MappingFramework.MappingInterface"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="0.8*"/>
        </Grid.ColumnDefinitions>
        
        <Label x:Name="ComponentLabel" Grid.Column="0"></Label>
        <CheckBox x:Name="ComponentCheckBox" Grid.Column="1">Checked</CheckBox>
    </Grid>
</UserControl>
