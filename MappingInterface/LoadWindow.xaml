<Window x:Class="MappingFramework.MappingInterface.LoadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MappingFramework.MappingInterface"
        mc:Ignorable="d"
        Title="LoadWindow" Height="550" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.9*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="0.3*"/>
        </Grid.ColumnDefinitions>
        
        <ScrollViewer Grid.Row="0" Grid.ColumnSpan="3">
            <StackPanel x:Name="FileListComponent">
                
            </StackPanel>
        </ScrollViewer>

        <Button x:Name="BackButton" Grid.Row="1" Grid.Column="0" Content="Back" Width="60" Height="30" />
        <Button x:Name="DeleteButton" Grid.Row="1" Grid.Column="1" Content="Delete" Width="60" Height="30" />
        <Button x:Name="LoadButton" Grid.Row="1" Grid.Column="2" Content="Load" Width="60" Height="30" />
    </Grid>
</Window>
